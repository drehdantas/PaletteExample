                                android:id="@+id/vibrant_color_light_text_vibrant_color_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginBottom="5dp"
                                android:text="@string/muted_color"
                                android:id="@+id/vibrant_color_light_text_muted_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView

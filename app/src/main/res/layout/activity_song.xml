                                android:id="@+id/vibrant_color_dark_text_muted_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginBottom="5dp"
                                android:text="@string/muted_color_dark"
                                android:id="@+id/vibrant_color_dark_text_muted_color_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginBottom="5dp"
                                android:text="@string/muted_color_light"
                                android:id="@+id/vibrant_color_dark_text_muted_color_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vibrant_color_light"
                        android:textColor="@color/cardview_dark_background" />

